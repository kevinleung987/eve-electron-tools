{
  "name": "eve-electron-tools",
  "version": "0.0.2",
  "description": "Electron-powered toolset for EVE Online. Built using Electron, Angular, and Bootstrap.",
  "main": "./main.js",
  "scripts": {
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "browser": "npm run postinstall:web && npm run ng:serve:web",
    "build": "npm run postinstall:electron && ng build",
    "build:prod": "npm run build -- -c production",
    "build:browser": "npm run postinstall:web && ng build --configuration=browser",
    "bundle:linux": "npm run build:prod && npx electron-builder build --linux",
    "bundle:windows": "npm run build:prod && npx electron-builder build --windows",
    "bundle:mac": "npm run build:prod && npx electron-builder build --mac",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && ng serve -o --configuration=browser",
    "electron:serve": "wait-on http-get://localhost:4200/ && electron . --serve",
    "postinstall": "electron-builder install-app-deps",
    "postinstall:electron": "node postinstall electron-renderer",
    "postinstall:web": "node postinstall web"
  },
  "dependencies": {
    "@angular-devkit/build-angular": "^0.13.3",
    "@angular/animations": "^7.2.7",
    "@angular/common": "^7.2.7",
    "@angular/compiler": "^7.2.7",
    "@angular/core": "^7.2.7",
    "@angular/forms": "^7.2.7",
    "@angular/http": "^7.2.7",
    "@angular/platform-browser": "^7.2.7",
    "@angular/platform-browser-dynamic": "^7.2.7",
    "@angular/router": "^7.2.7",
    "bootstrap-material-design": "^4.1.1",
    "chokidar": "^2.1.2",
    "core-js": "^2.6.5",
    "jquery": "^3.3.1",
    "match-sorter": "^2.3.0",
    "ngx-papaparse": "^3.0.2",
    "ngx-toastr": "^9.1.2",
    "popper.js": "^1.14.7",
    "rxjs": "^6.4.0",
    "zone.js": "^0.8.29"
  },
  "devDependencies": {
    "@angular/cli": "^7.3.3",
    "@angular/compiler-cli": "^7.2.7",
    "@angular/language-service": "^7.2.7",
    "@types/chokidar": "^1.7.5",
    "@types/node": "^11.9.5",
    "codelyzer": "^4.5.0",
    "electron": "^4.0.6",
    "electron-builder": "^20.38.5",
    "electron-reload": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.13.0",
    "typescript": "~3.1.3",
    "wait-on": "^3.2.0"
  }
}
