{
  "name": "eve-electron-tools",
  "version": "0.0.1",
  "private": true,
  "description": "Back-end-optional, desktop alternative for popular community tools for EVE Online.",
  "main": "./main.js",
  "scripts": {
    "start": "npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "browser": "npm run postinstall:web && npm run ng:serve:web",
    "build-all": "npm-run-all bundle:linux bundle:windows",
    "build": "npm run postinstall:electron && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "bundle:linux": "npm run build:prod && npx electron-builder build --linux",
    "bundle:windows": "npm run build:prod && npx electron-builder build --windows",
    "bundle:mac": "npm run build:prod && npx electron-builder build --mac",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && ng serve",
    "electron:serve": "wait-on http-get://localhost:4200/ && electron . --serve",
    "electron": "ng build --base-href ./ && electron .",
    "postinstall": "electron-builder install-app-deps",
    "postinstall:electron": "node postinstall electron-renderer",
    "postinstall:web": "node postinstall web"
  },
  "dependencies": {
    "@angular-devkit/build-angular": "^0.11.0",
    "@angular/animations": "^7.1.1",
    "@angular/common": "^7.1.1",
    "@angular/compiler": "^7.1.1",
    "@angular/core": "^7.1.1",
    "@angular/forms": "^7.1.1",
    "@angular/http": "^7.1.1",
    "@angular/platform-browser": "^7.1.1",
    "@angular/platform-browser-dynamic": "^7.1.1",
    "@angular/router": "^7.1.1",
    "bootstrap-material-design": "^4.1.1",
    "core-js": "^2.5.4",
    "jquery": "^3.3.1",
    "ngx-electron": "^2.0.0",
    "ngx-papaparse": "^3.0.0",
    "popper.js": "^1.14.6",
    "rxjs": "^6.3.3",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular/cli": "^7.1.0",
    "@angular/compiler-cli": "^7.1.1",
    "@angular/language-service": "^7.1.1",
    "@types/node": "^10.12.11",
    "codelyzer": "^4.5.0",
    "electron": "^3.0.10",
    "electron-builder": "^20.38.2",
    "npm-run-all": "^4.1.5",
    "ts-node": "~5.0.1",
    "tslint": "^5.11.0",
    "typescript": "~3.1.3",
    "wait-on": "^3.2.0"
  }
}
